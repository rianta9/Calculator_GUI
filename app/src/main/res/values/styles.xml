<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NormalBTN">
        <item name="android:background">#F6EBF6</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">24dp</item>
        <item name="android:layout_margin">1px</item>
    </style>
    <style name="FunctionBTN">
        <item name="android:background">#E91E63</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">24dp</item>
        <item name="android:layout_margin">1px</item>
    </style>
    <style name="ResultView">
        <item name="android:background">#131112</item>
        <item name="android:padding">10px</item>
        <item name="android:textColor">#05AE32</item>
        <item name="android:textSize">60dp</item>
        <item name="android:gravity">right|center_vertical</item>
    </style>
</resources>
